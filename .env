# =============================================================================
# Angel One API Credentials
# Get from: https://smartapi.angelbroking.com/
# =============================================================================
ANGEL_API_KEY=your_api_key_here
ANGEL_CLIENT_ID=your_client_id_here
ANGEL_PASSWORD=your_password_here
ANGEL_TOTP_SECRET=your_totp_secret_here

# =============================================================================
# AWS Credentials (You'll get these after AWS setup)
# Get from: AWS Console -> IAM -> Users -> Security Credentials
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET_RAW=stockpulse-raw-data
AWS_S3_BUCKET_PROCESSED=stockpulse-processed-data

# RDS PostgreSQL (You'll set this up later)
AWS_RDS_HOST=your-rds-endpoint.ap-south-1.rds.amazonaws.com
AWS_RDS_PORT=5432
AWS_RDS_DATABASE=stockpulse_db
AWS_RDS_USER=postgres
AWS_RDS_PASSWORD=your_rds_password

# =============================================================================
# News API (Free tier: 100 requests/day)
# Get from: https://newsapi.org/register
# =============================================================================
NEWS_API_KEY=your_news_api_key

# =============================================================================
# Flask Configuration
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=stockpulse_secret_key_change_in_production

# =============================================================================
# Render Deployment (Leave empty for now)
# =============================================================================
RENDER_EXTERNAL_URL=

